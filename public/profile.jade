extends layout


block header
	a(href="/profiles", rel="external") Users
	h1 #{title}
	if logged_in
		a(href="/logout", rel="external", class="ui-btn-right") Logout
	else
		a(href="/login", rel="external", class="ui-btn-right") Login

block content
	mixin listItem(user, checkin)
		li(data-icon="false")
			a 
				h3 #{user.name.givenName} #{user.name.familyName} checked in at #{checkin.venue.name}
				p #{checkin.venue.location.city}, #{checkin.venue.location.state}
				span(style="float:right") #{checkin.createdAt}

	ul(data-role="listview", data-inset="true")
		each checkin in checkins
			+listItem(user, checkin)