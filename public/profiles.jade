extends layout


block header
	h1 #{title}
	if logged_in
		a(href="/logout", rel="external", class="ui-btn-right") Logout
	else
		a(href="/login", rel="external", class="ui-btn-right") Login

block content
	mixin listItem(name, user_id, photo, city)
		li(data-icon="false")
			a(href="/profile/#{user_id}", rel="external") 
				img(src="#{photo}")
				h3 #{name.givenName} #{name.familyName}
				p #{city}
	ul(data-role="listview", data-inset="true")
		each user in users
			+listItem(user.name, user.foursquareId, user.photo, user.homeCity)